<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nowcoder.dao.UserDao">
    <sql id="table">user</sql>
    <sql id="insertFields">(name,password,salt,head_url)
    </sql>
    <sql id="selectFields">id,name,password,salt,head_url
    </sql>
    <insert id="addUser" ><!--resultType="com.nowcoder.model.Question"-->
        INSERT INTO
        <include refid="table"/>
        <include refid="insertFields"/>
        VALUES
        (#{name},#{password},#{salt},#{headUrl})
    </insert>

    <select id="selectById" resultType="com.nowcoder.model.User">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </select>
</mapper>
